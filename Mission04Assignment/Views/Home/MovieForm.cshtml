<!--Add Movie Page-->

@{
    ViewData["Title"] = "Movie Form";
    ViewData["Header"] = "Add a New Movie to the Database!";
}

@model Mission04Assignment.Models.AddMovieResponse

<!--Form for user to fill out-->
<div>
    <form method="post">
        <label asp-for="CategoryId">Category:</label>
        <select asp-for="CategoryId">
            <option value="">Select a Category</option>
            @foreach (Category item in ViewBag.Categories)
            {
                <option value="@item.CategoryId">@item.CategoryName</option>
            }
        </select><br/>

        <label asp-for="Title">Title:</label>
        <input asp-for="Title"/><br/>

        <label asp-for="Year">Year:</label>
        <input asp-for="Year"/><br/>

        <label asp-for="Director">Director:</label>
        <input asp-for="Director"/><br/>

        <label asp-for="Rating">Rating:</label>
        <select asp-for="Rating">
            <option value="">Select a Rating</option>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select><br />

        <label asp-for="Edited">Edited:</label>
        <select asp-for="Edited">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select><br/>

        <label asp-for="LentTo">Lent To:</label>
        <input asp-for="LentTo"/><br/>

        <label asp-for="Notes">Notes:</label>
        <input asp-for="Notes"/><br/>

        <button type="submit">Add Movie</button>

        <!--Displays validation requirements-->
        <div asp-validation-summary="All"></div>
    </form>
</div>
